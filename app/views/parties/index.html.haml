%p#notice= notice
%h1 Listing Parties
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @parties.each do |party|
      %tr
        %td= party.name
        %td= link_to 'Show', party
        %td= link_to 'Edit', edit_party_path(party)
        %td= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Party', new_party_path
